@model ThuanPhat.Models.Service
@{
    Layout = "~/Views/Shared/_AdminIframeLayout.cshtml";
    var categoryVi = Model.ServiceLangs.SingleOrDefault(a => a.ServiceId == Model.Id && a.LanguageId == 2);
}

<div>
    <h2>Cập nhật tiếng nhật</h2>
    <div class="box_content">
        @if (ViewBag.Result == 1)
        {
            <div id="AlertBox" class="alert alert-success text-center"><strong>Cập nhật thành công</strong></div>
        }
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary(true)
            <input type="hidden" name="ServiceId" value="@Model.Id" />
            <input type="hidden" name="LangId" value="2" />
            <table class="form_table">
                <tr>
                    <td class="form_name">Bài gốc</td>
                    <td class="form_text"><strong>@Model.ServiceName</strong></td>
                </tr>
                <tr>
                    <td class="form_name">Tên dịch vụ</td>
                    <td class="form_text">
                        <input type="text" name="Name" required="" maxlength="100" class="form_control w300" value="@(categoryVi?.ServiceName)" />
                    </td>
                </tr>
                <tr>
                    <td class="form_name">Bài gốc</td>
                    <td class="form_text"><strong>@Html.Raw(Model.Description)</strong></td>
                </tr>
                <tr>
                    <td class="form_name">Trích dẫn ngắn</td>
                    <td class="form_text">
                        <textarea rows="4" class="form_control w300" name="Description">@(categoryVi?.Description)</textarea>
                    </td>
                </tr>
                <tr>
                    <td class="form_name">Bài gốc</td>
                    <td class="form_text">
                        <div class="mask-body">
                            @Html.Raw(Model.Body)
                        </div>
                    </td>
                </tr>
                <tr>
                    <td class="form_name">Nội dung</td>
                    <td class="form_text">
                        <textarea class="ckeditor" name="Body">@(categoryVi?.Body)</textarea>
                    </td>
                </tr>
                <tr>
                    <td class="form_name">Đường dẫn</td>
                    <td class="form_text">
                        <input type="text" name="Url" maxlength="100" class="form_control w300"
                               @if (categoryVi?.Url != null) { @Html.Raw("value='" + categoryVi.Url + "'")  } 
                               else { @Html.Raw("value='" + Model.Url + "'") } />
                    </td>
                </tr>
                <tr>
                    <td class="form_name">Thẻ SEO Title</td>
                    <td class="form_text"><input type="text" name="TitleMeta" maxlength="500" class="form_control w300" value="@(categoryVi?.TitleMeta)" /></td>
                </tr>
                <tr>
                    <td class="form_name">Thẻ SEO Description</td>
                    <td class="form_text">
                        <textarea rows="4" class="form_control w300" name="DescriptionMeta">@(categoryVi?.DescriptionMeta)</textarea>
                    </td>
                </tr>
                <tr>
                    <td class="form_name"></td>
                    <td class="form_text"><input type="submit" class="quick-link" value="Cập nhật" /></td>
                </tr>
            </table>
        }
    </div>
</div>