                    foreach (var item in Model.ServiceCategoryDtos.Where(a => a.ParentId == null))
                    {
                        <li>
                            <a href="@Url.Action("ServiceCategory", "Home", new { url = item.Url, Culture })">
                                @item.CategoryName
