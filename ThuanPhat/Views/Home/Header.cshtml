        </form>
        <div class="menu-mb">
            <ul class="ul-reset nav-mb">
                @if (Model.IntroduceCatDto.Any(a => a.ParentId == null))
                {
                    foreach (var item in Model.IntroduceCatDto.Where(a => a.ParentId == null))
                    {
                        <li>
                            <a href="@Url.Action("Introduce", new { Culture })">
                                @item.CategoryName
                            </a>
                            @if (Model.IntroduceCatDto.Any(a => a.ParentId == item.Id))
                            {
                                <ul class="ul-reset sub-nav-mb">
                                    @foreach (var child in Model.IntroduceCatDto.Where(a => a.ParentId == item.Id))
                                    {
