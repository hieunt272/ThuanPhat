                            @if (Model.ServiceCategoryDtos.Any(a => a.ParentId == item.Id))
                            {
                                <ul class="ul-reset sub-nav-mb">
                                    @foreach (var child in Model.ServiceCategoryDtos.Where(a => a.ParentId == item.Id))
                                    {
                                        <li>
                                            <a href="@Url.Action("ServiceCategory", "Home", new { url = child.Url, Culture })">
                                                @child.CategoryName
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        </li>
                    }
                }
                @if (Model.ArticleCategoryDtos.Any(a => a.ParentId == null))
                {
                    foreach (var item in Model.ArticleCategoryDtos.Where(a => a.ParentId == null))
                    {
                        <li>
                            <a href="@Url.Action("ArticleCategory", "Home", new { url = item.Url, Culture })">
                                @item.CategoryName
                            </a>
                            @if (Model.ArticleCategoryDtos.Any(a => a.ParentId == item.Id))
                            {
                                <ul class="ul-reset sub-nav-mb">
                                    @foreach (var child in Model.ArticleCategoryDtos.Where(a => a.ParentId == item.Id))
                                    {
                                        <li>
                                            <a href="@Url.Action("ArticleCategory", "Home", new { url = child.Url, Culture })">
                                                @child.CategoryName
                                            </a>
                                        </li>
                                    }
                                </ul>
                            }
                        </li>
                    }
                }
                <li>
                    <a href="@Url.Action("Contact")">
                        @Resources.Contact
                    </a>
                </li>
            </ul>
        </div>
    </div>
</section>
