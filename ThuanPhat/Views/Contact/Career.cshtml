@model ThuanPhat.Models.Career
@{
    ViewBag.Title = "Thêm nghề nghiệp";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2>Thêm Nghề nghiệp</h2>
@if (ViewBag.Career == "success")
{
    <div id="AlertBox" class="alert alert-success"><strong>Thêm mới nghề nghiệp thành công</strong></div>
}
@if (ViewBag.Career == "update")
{
    <div id="AlertBox" class="alert alert-success"><strong>Cập nhật nghề nghiệp thành công</strong></div>
}
<a class="btn quick-link" id="create-cat" href="#list-career"><i class="far fa-list mr-1"></i> Danh sách nghề nghiệp</a>
<div class="box_content">
    <div class="row">
        <div class="col-sm-12 col-lg-12">
            @using (Html.BeginForm("Career", "Contact", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                @Html.ValidationSummary(true)
                <table class="form_table form-table-cat">
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Name)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.Name)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Sort)</td>
                        <td class="form_text">@Html.EditorFor(a => Model.Sort)</td>
                    </tr>
                    <tr>
                        <td class="form_name">@Html.LabelFor(a => Model.Active)</td>
                        <td class="form_text">@Html.CheckBoxFor(a => Model.Active, new { @checked = "checked" })</td>
                    </tr>
                    <tr>
                        <td class="form_name"></td>
                        <td class="form_text">
                            <input type="submit" class="btn quick-link" value="Thêm mới" />
                        </td>
                    </tr>
                </table>
            }
        </div>
        <div class="col-sm-12 col-lg-12">
            @Html.Action("ListCareer", "Contact")
        </div>
    </div>
</div>